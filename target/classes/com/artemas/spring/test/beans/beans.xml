<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">



	<bean id="person" class="com.artemas.spring.test.Person"
		scope="singleton">
		<constructor-arg value="777" name="id"></constructor-arg>
		<constructor-arg value="Artie" name="name"></constructor-arg>
		<property name="taxId" value="123"></property>
		<property name="address" ref="address"></property>
	</bean>



	<bean id="address" class="com.artemas.spring.test.Address">
		<constructor-arg name="street" value="26 Comfrey close"></constructor-arg>
		<constructor-arg name="postCode" value="gu14 9xx"></constructor-arg>
	</bean>
</beans>
